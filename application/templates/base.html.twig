{% set myName = "Sébastien Morel aka Plopix" %}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/3540dd2536.js" crossorigin="anonymous"></script>
    <title>{{ person.handle|capitalize }} Open Source Projects</title>
    <meta name="description" content="{{ myName }} list of proudly maintained Open Source Projects">
    <style type="text/css">
        .header {
            padding-top: 0;
            padding-bottom: 0;

        }

        .card-body a.card-link {
            margin-left: 0;
            margin-right: 0.5rem;
        }
    </style>
</head>
<body>
<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <h5 class="my-0 mr-md-auto font-weight-normal">
        <img src="https://avatars2.githubusercontent.com/u/313532?s=90&v=4" alt="Sébastien Morel aka Plopix" width="45" height="45" />
        {{ person.handle|capitalize }}
    </h5>
    <nav class="my-2 my-md-0 mr-md-3">
        <a class="p-2 text-dark" target="_blank" href="{{ person.linkedIn }}"><i class="fab fa-linkedin"></i> LinkedIn</a>
        <a class="p-2 text-dark" target="_blank" href="{{ person.twitter }}"><i class="fab fa-twitter"></i> Twitter</a>
        <a class="p-2 text-dark" target="_blank" href="{{ person.github }}"><i class="fab fa-github"></i> Github</a>
    </nav>
</div>

<div class="container">
    <div class="row">
        <div class="col-8">
            <div class="header px-3 pt-md-5 mx-auto text-center">
                <h1 class="display-4">{{ person.name }}</h1>
                <p class="lead">{{ person.jobTitle }}
                    {% for company in person.companies %}
                        {% if loop.first %}@{% else %}by {% endif %}
                        <a href="{{ company.url }}" target="_blank">{{ company.name }}</a>
                    {% endfor %}
                <p>{{ person.biography }}</p>
            </div>
        </div>
        <div class="col-4">
            <div class="header px-3 pt-md-5 mx-auto text-center">
                <img src="https://github.githubassets.com/images/modules/site/sponsors/logo-mona.svg" alt="Mona holding a heart" width="150" /><br />
                <p>You can now
                    <a href="{{ person.sponsoringLink }}" target="_blank">sponsor me</a> on Github!</p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 d-flex justify-content-center">
            <div class="d-flex">
                <div class="align-self-center">
                    #certified
                </div>
                {% for certif in certifications %}
                    <div class="align-self-center">
                        <img src="{{ certif.image.file.url }}" alt="{{ certif.name }}" width="200" />
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    {% block content %}{% endblock %}
    <footer class="pt-4 my-md-5 pt-md-5 border-top">
        <div class="row">
            <div class="col-2">
                <img class="mb-2" src="https://avatars2.githubusercontent.com/u/313532?s=48&v=4" width="24" height="24" alt="{{ myName }}" />

                <small class="d-block mb-3 text-muted">&copy; {{ "now"|date("Y") }}</small>
            </div>
            <div class="col-10">
                <img class="float-right" src='https://img.shields.io/badge/Updated on-{{ 'now'|date('m-d-Y H:i:s')|replace({'-':'--'}) }}-green?style=flat-square&labelColor=black' alt='Updated on 07--27--2020 20:30:02' />
                <p class="text-center">
                    <i class="fas fa-code"></i> with
                    <i class="fas fa-heart"></i> in San Francisco, California.
                </p>
            </div>
        </div>
    </footer>
</div>
<div class="modal" tabindex="-1" role="dialog" id="konami-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">You must unlearn what you have learned!</h5>
            </div>
            <div class="modal-body">
                <p class="text-center">Join my team!</p>
            </div>
            <div class="modal-footer">
                <p class="text-center">Send me an email to
                    <a href="mailto:s.morel+konami4@novactive.com">s.morel+konami4@novactive.com</a></p>
            </div>
        </div>
    </div>
</div>
